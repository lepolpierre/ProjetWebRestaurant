        <div id="contenue"></div>


      </main>
      <script>

        var a = `<%=contenu%>`
        console.log({ a })

        container = document.getElementById('contenue');

        newDiv = document.createElement('div');
        newDiv.innerHTML = htmldecode(a);



        console.log({ newDiv })
        container.appendChild(newDiv)


        function htmldecode(str) {

          var txt = document.createElement('textarea');
          txt.innerHTML = str;
          return txt.value;
        }
      </script>


