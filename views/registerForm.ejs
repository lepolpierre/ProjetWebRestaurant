<%- include ('includes/head.ejs') %>

<!-- <link rel="stylesheet" type="text/css" href="/public/css/registerForm.css"> -->

</head>

<body>
    <main>
        <h2 class="titre">Cr√©ation de compte</h2>

        <% if (typeof locals.error != 'object') { %>
            <div class="error">
                <p><%= locals.error %> </p>
            </div>
        <% } %>


    
        <form method="POST" action="/auth/signup">

            <div>
                <label for="u-email">Votre Courriel</label>
                <input type="email" name="u_email" required value=<%=locals.email %>>
            </div>

            <% if (locals.error != null) { %>
                <div class="error">
                    <p><%= locals.error.email %> </p>
                </div>
            <% } %>

            <div>
                <label for="u-username">Nom utilisateur</label>
                <input type="text" name="u_username" required value=<%=locals.username %> >
            </div>
            
            <% if (locals.error != null) { %>
                <div class="error">
                    <p><%= locals.error.username %> </p>
                </div>
            <% } %>


            <div>
                <label for="u-pwd">Mot de passe</label>
                <input type="password" name="u_pwd" required value=<%=locals.pwd %> >
            </div>

            <% if (locals.error != null) { %>
                <div class="error">
                    <p><%= locals.error.password %> </p>
                </div>
            <% } %>

            <div>
                <label for="u-pwdConfirm">Confirmer le mot de passe</label>
                <input type="password" name="u_pwdConfirm" required>
            </div>
            <input class="btnSubmit" type="submit" value="Soumettre">

        </form>

    </main>


    <%- include('includes/end.ejs')  %>
</body>

