<%- include ('../includes/head.ejs') %>

<link rel="stylesheet" type="text/css" href="/public/css/form.css">

</head>

<body>
    <%- include('../includes/header.ejs')  %> 

    <main>
        <h2 class="titre">Création de compte</h2>
    
        <form class="col-10" method="POST" action="/auth/signup">
            <a class="mt-3 d-block float-end" href="/auth/login">Déja un compte?</a>

            <% if (typeof locals.error != 'object') { %>
                <div class="error">
                    <p><%= locals.error %> </p>
                </div>
            <% } %>
    
            <div>
                <label class="form-label" for="u-email">Votre Courriel</label>
                <input class="form-control" type="email" name="u_email" placeholder="Courriel"
                 required value=<%=locals.email %>>
            </div>

            <% if (locals.error != null) { %>
                <div class="error">
                    <p><%= error.email %> </p>
                </div>
            <% } %>

            <div>
                <label class="form-label" for="u-username">Nom utilisateur</label>
                <input class="form-control" type="text" name="u_username" placeholder="Username"
                required value=<%=locals.username %> >
            </div>
            
            <% if (locals.error != null) { %>
                <div class="error">
                    <p><%= error.username %> </p>
                </div>
            <% } %>


            <div>
                <label class="form-label" for="u-pwd">Mot de passe</label>
                <input class="form-control" type="password" name="u_pwd" placeholder="Choisir un mot de passe"
                required value=<%=locals.pwd %> >
            </div>

            <% if (locals.error != null) { %>
                <div class="error">
                    <p><%= error.password %> </p>
                </div>
            <% } %>

            <div>
                <label class="form-label" for="u-pwdConfirm">Confirmer le mot de passe</label>
                <input class="form-control" type="password" name="u_pwdConfirm" 
                placeholder="Confirmer votre mot de passe" required>
            </div>
            
            <input class="mt-2 btn-outline-success btn" type="submit" value="Soumettre">
            
        </form>

    </main>


    <%- include('../includes/end.ejs')  %>
</body>

